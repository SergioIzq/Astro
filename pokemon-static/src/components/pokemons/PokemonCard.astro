---
import { Image } from "astro:assets";

interface Props {
    url: string;
    name: string;
    isBig?: boolean;
    fromPage?: number;
}

const { name, url, isBig = false, fromPage } = Astro.props;

const id = url.split("/").at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
    href={`/pokemons/${name}`}
    class:list={[
        `rounded flex flex-col justify-center items-center p-2`,
        {
            border: !isBig,
        },
    ]}
>
    <Image
        transition:name={`${name}-image`}
        class:list={[
            {
                "w-66 h-66": isBig,
                "w-22 h-22": !isBig,
            },
        ]}
        src={imageSrc}
        alt={name}
        width={300}
        height={300}
        format="webp"
        quality={80}
    />

    <span
        class:list={[
            `capitalize`,
            {
                "text-4xl text-blue-300": isBig,
            },
        ]}>#{id} {name}</span
    >
</a>
